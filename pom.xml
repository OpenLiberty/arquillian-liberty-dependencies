<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<parent>
        <groupId>net.wasdev.maven.parent</groupId>
        <artifactId>parent</artifactId>
        <version>1.4</version>
        <relativePath />
    </parent>
	
	<modelVersion>4.0.0</modelVersion>
	<groupId>io.openliberty.arquillian</groupId>
	<artifactId>arquillian-liberty-jakarta-dependencies</artifactId>
	<version>2.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Arquillian Liberty Jakarta Dependency Bundles</name>

	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>https://raw.github.com/OpenLiberty/arquillian-liberty-dependencies/master/LICENSE</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<scm>
		<connection>scm:git:git@github.com:OpenLiberty/arquillian-liberty-dependencies.git</connection>
		<developerConnection>scm:git:git@github.com:OpenLiberty/arquillian-liberty-dependencies.git</developerConnection>
		<url>git@github.com:OpenLiberty/arquillian-liberty-dependencies.git</url>
		<tag>HEAD</tag>
	</scm>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.jboss.arquillian</groupId>
				<artifactId>arquillian-bom</artifactId>
				<version>1.7.0.Alpha9</version>
				<scope>import</scope>
				<type>pom</type>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<repositories>
		<repository>
			<id>oss-sonatype</id>
			<name>oss-sonatype</name>
			<url>https://oss.sonatype.org/content/repositories/snapshots/</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<maven.compiler.source>1.7</maven.compiler.source>
		<maven.compiler.target>1.7</maven.compiler.target>

		<liberty.arquillian.groupId>io.openliberty.arquillian</liberty.arquillian.groupId>
		<liberty.arquillian.version>2.0.0</liberty.arquillian.version>
		<liberty.managed.artifactId>arquillian-liberty-managed-jakarta</liberty.managed.artifactId>
		<liberty.remote.artifactId>arquillian-liberty-remote-jakarta</liberty.remote.artifactId>

		<junit.version>4.12</junit.version>
		<testng.version>6.13.1</testng.version>
	</properties>

	<modules>
		<module>arquillian-liberty-managed-jakarta-junit</module>
		<module>arquillian-liberty-managed-jakarta-testng</module>
		<module>arquillian-liberty-remote-jakarta-junit</module>
		<module>arquillian-liberty-remote-jakarta-testng</module>
	</modules>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.8</version>
				<executions>
					<execution>
						<id>write-gradle-test-dependency-version</id>
						<phase>verify</phase>
						<configuration>
							<target>
								<echo file="gradle-tests/gradle.properties" append="false">
									dependencyBundleVersion=${project.version}
								</echo>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>it</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-invoker-plugin</artifactId>
						<version>3.0.1</version>
						<configuration>
							<debug>false</debug>
							<goals>
								<goal>install</goal>
							</goals>
							<projectsDirectory>it</projectsDirectory>
							<properties>
								<arquillian.liberty.dependencies.version>${project.version}</arquillian.liberty.dependencies.version>
							</properties>
							<cloneProjectsTo>${project.build.directory}/it</cloneProjectsTo>
							<profiles>
								<profile>it</profile>
							</profiles>
							<streamLogs>true</streamLogs>
						</configuration>
						<executions>
							<execution>
								<id>integration-test</id>
								<goals>
									<goal>install</goal>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
